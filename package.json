{
  "name": "things-that-flow",
  "description": "obsessed with smooth motions and minimalism",
  "author": {
    "name": "yongwoo",
    "email": "wooleejaan@gmail.com",
    "url": "https://github.com/wooleejaan"
  },
  "homepage": "https://github.com/Things-That-Flow/things-that-flow#readme",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "bugs": "https://github.com/Things-That-Flow/things-that-flow/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/Things-That-Flow/things-that-flow"
  },
  "type": "module",
  "keywords": [
    "monorepo",
    "pnpm",
    "typescript"
  ],
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=8.15.1"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "preinstall": "pnpm dlx only-allow pnpm",
    "prepare": "husky install",
    "lint": "pnpx eslint .",
    "install-all": "pnpm install && pnpm --filter @ttflow/client install && pnpm --filter ttflow-tsconfig install",
    "uninstall-all": "find . -name 'node_modules' -exec rm -rf '{}' + ",
    "batch-update": "pnpm uninstall-all && pnpm install-all",
    "client": "pnpm --filter @ttflow/client",
    "tsconfig": "pnpm --filter ttflow-tsconfig",
    "dev:client:afterupdate": "pnpm batch-update && pnpm client run dev",
    "dev:client": "pnpm client run dev"
  },
  "packageManager": "pnpm@8.15.1",
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.0.10",
    "pnpm": "^8.15.1",
    "prettier": "^3.2.5",
    "ttflow-tsconfig": "^1.0.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
