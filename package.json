{
  "name": "things-that-flow",
  "description": "obsessed with smooth motions and minimalism",
  "author": {
    "name": "yongwoo",
    "email": "wooleejaan@gmail.com",
    "url": "https://github.com/wooleejaan"
  },
  "homepage": "https://github.com/Things-That-Flow/things-that-flow#readme",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "bugs": "https://github.com/Things-That-Flow/things-that-flow/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/Things-That-Flow/things-that-flow"
  },
  "type": "module",
  "keywords": [
    "monorepo",
    "pnpm",
    "typescript"
  ],
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=8.15.1"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "preinstall": "pnpm dlx only-allow pnpm",
    "prepare": "husky install",
    "lint": "pnpx eslint .",
    "format": "pnpx prettier --write \"**/*.{ts,tsx,md}\"",
    "install-all": "pnpm install && pnpm --filter @ttflow/client install && pnpm --filter @ttflow/tsconfig install && pnpm --filter @ttflow/eslint-config-custom install",
    "uninstall-all": "find . -name 'node_modules' -exec rm -rf '{}' + ",
    "batch-update": "pnpm uninstall-all && pnpm install-all",
    "client": "pnpm --filter @ttflow/client",
    "tsconfig": "pnpm --filter @ttflow/tsconfig",
    "eslint-custom": "pnpm --filter @ttflow/eslint-config-custom install",
    "dev:client:afterupdate": "pnpm batch-update && pnpm client run dev",
    "dev:client": "pnpm client run dev",
    "config:pre-commit": "chmod +x .husky/pre-commit && pnpm batch-update && pnpx prettier --write . && pnpm lint"
  },
  "packageManager": "pnpm@8.15.1",
  "devDependencies": {
    "@types/node": "^20.11.16",
    "husky": "^9.0.10",
    "pnpm": "^8.15.1",
    "@ttflow/tsconfig": "workspace:*",
    "@ttflow/eslint-config-custom": "workspace:*",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
